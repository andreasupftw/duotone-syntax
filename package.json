{
  "name": "duotone-syntax",
  "theme": "syntax",
  "version": "1.0.0",
  "description": "Master template for DuoTone syntax themes",
  "keywords": [
    "duotone",
    "syntax"
  ],
  "repository": "https://github.com/simurai/duotone-syntax",
  "license": "MIT",
  "main": "lib/duotone",
  "engines": {
    "atom": ">1.9.0"
  },
  "dependencies": {
    "chroma-js": "1.1.1"
  },
  "configSchema": {
    "unoColor": {
      "title": "Uno",
      "description": "Change the main hue.",
      "order": 1,
      "type": "color",
      "default": "blue"
    },
    "duoColor": {
      "title": "Duo",
      "description": "Change the accent color.",
      "order": 2,
      "type": "color",
      "default": "yellow"
    },
    "contrast": {
      "title": "Contrast",
      "description": "Change the contrast.",
      "order": 3,
      "type": [
        "integer"
      ],
      "enum": [5, 4, 3, 2, 1],
      "default": "3"
    }
  }
}
